<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" styleClass="border" fx:controller="Controller" fx:id = "root">
    <center>
        <VBox styleClass="VBox" alignment="CENTER">
            <Text fx:id = "portNumRequest" text="Welcome to Connect 4! Enter the port number to play Connect 4" textAlignment="CENTER"/>
            <TextField fx:id = "portNum" editable="true" focusTraversable="false" promptText="Enter port number here" alignment="CENTER" maxWidth="400"/>
            <Button fx:id = "start" text = "Start Game" onAction="#startButtonMethod" textAlignment="CENTER"/>
        </VBox>
    </center>
</BorderPane>